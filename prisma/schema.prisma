generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  role             String    @default("user")
  createdAt        DateTime  @default(now())
  resetToken       String?   @db.VarChar(255)
  resetTokenExpiry DateTime?
}
